<h1>Login</h1>
<%= link_to 'Back', '/welcome', method: :get, :class => "ui red tag label" %>
<div class="ui divider"></div>
<div class="ui grid">
  <div class="ui six wide column centered">
    <%= form_tag '/login', class: "ui form" do %>
    <div class="field">
      <%= label_tag :username%>
      <%= text_field_tag :username,"", required: true %>
    </div> 
    <div class="field">
      <%= label_tag :password%>
      <%= password_field_tag :password, "",required: true%>
    </div>
    <%= submit_tag "Login", :class => "ui button"%>
    <%end%>
  </div>
</div>
